{{> nav }}

<main>

    <div class="project-container">

        <section class="project-media-container">
            <div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1" uk-slideshow="ratio: 3:2">
                <ul class="uk-slideshow-items">
                    {{#each project.images}}
                    <li>
                        <img src={{imgSrc}} id={{_id}} uk-cover>
                    </li>
                    {{/each}}
                </ul>
                <a class="uk-position-center-left uk-position-small" href="#" uk-slidenav-previous
                    uk-slideshow-item="previous"></a>
                <a class="uk-position-center-right uk-position-small" href="#" uk-slidenav-next
                    uk-slideshow-item="next"></a>
            </div>
        </section>

        <section class="project-desc-container">
            <h2 class="project-desc--name">{{project.name}}</h2>

            <div class="project-desc--about">
                {{#each project.about}}
                <p>{{paragraph}}</p>
                {{/each}}

                {{#each project.details}}
                <p class="detail">{{detail}}</p>
                {{/each}}
            </div>
        </section>

    </div>

    <section class="project-panel-container">
        {{#each project.images}}
            <div class="project-panel-card">
                <img src={{imgSrc}} alt={{_id}}>
            </div>
        {{/each}}
    </section>

    <div class="bottom-nav">
        <a href="#top">BACK TO TOP &#8593 </a>
    </div>

</main>

{{> footer }}